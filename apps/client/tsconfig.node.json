	// "extends": "tsconfig/vite.json",
	"compilerOptions": {
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"allowJs": false,
		"skipLibCheck": false,
		"esModuleInterop": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"strictNullChecks": true,
		"moduleResolution": "Node",
		"isolatedModules": true,
		"types": ["@types/jest"]
	},
	"include": ["./src", "./jest-setup.ts"]
}
